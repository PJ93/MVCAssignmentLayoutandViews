@model MVCAssignmentLayoutandViews.Models.Guessing_game
@{
    ViewBag.Title = "Guessingame";
}

<h2>Guess a number between 1 and 100</h2>

<form action="@Url.Action("Guessingame")" method="post" )>
    <input type="number" name="guess" value="" placeholder="Enter between 1 - 100" />
    <input type="submit" value="Send" />
</form>
@ViewBag.result
@if (ViewBag.result != null)
{
    <h3>ViewBag.result</h3>
}